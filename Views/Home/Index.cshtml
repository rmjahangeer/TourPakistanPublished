    <!-- BEGIN: CONTENT/FEATURES/FEATURES-1 -->
    <div class="c-content-box c-size-md c-bg-white">
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="c-content-feature-1 wow animate fadeInUp">
                        <div class="c-content-line-icon c-theme c-icon-screen-chart"></div>
                        <h3 class="c-font-uppercase c-font-bold">About</h3>
                        <p class="c-font-thin">Information on what we do and what we offer to the tourists</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="c-content-feature-1 wow animate fadeInUp" data-wow-delay="0.2s">
                        <div class="c-content-line-icon c-theme c-icon-support"></div>
                        <h3 class="c-font-uppercase c-font-bold">Locations</h3>
                        <p class="c-font-thin">
                            Places that are finely stirred with nature and scenic beauty
                        </p>
                    </div>
                </div>
                <div class="col-sm-4 c-card">
                    <div class="c-content-feature-1 wow animate fadeInUp" data-wow-delay="0.4s">
                        <div class="c-content-line-icon c-theme c-icon-bulb"></div>
                        <h3 class="c-font-uppercase c-font-bold">Events</h3>
                        <p class="c-font-thin">
                            Keep yourself updated with upcoming events across the locations
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END: CONTENT/FEATURES/FEATURES-1 -->
    <!-- BEGIN: CONTENT/PORTFOLIO/LATEST-WORKS-1 -->
    <div class="c-content-box c-size-md c-bg-grey-1">
        <div class="container">
            <div class="c-content-title-1">
                <h3 class="c-center c-font-uppercase c-font-bold">Latest Portfolio</h3>
                <div class="c-line-center c-theme-bg"></div>
                <p class="c-center c-font-uppercase">Browse through our portfolio to witness the charm that nature has to offer to visitors</p>
            </div>
            <div class="cbp-panel">
                <!-- SEE: components.js:ContentCubeLatestPortfolio -->
                <div class="c-content-latest-works cbp cbp-l-grid-masonry-projects wow animate fadeInLeft">

                    @foreach (var location in Model.Locations)
                    {
                        <div class="cbp-item wow animate fadeInLeft customHeightItem" data-wow-delay="0.4s">
                            <div class="cbp-caption">
                                <div class="cbp-caption-defaultWrap">
                                    <img src="@location.ImageBase64" alt="">
                                </div>
                                <div class="cbp-caption-activeWrap">
                                    <div class="c-masonry-border"></div>
                                    <div class="cbp-l-caption-alignCenter">
                                        <div class="cbp-l-caption-body">
                                            <a href="@Url.Action("LocationDetail","Category")/@location.LocationId" class="cbp-singlePage cbp-l-caption-buttonLeft btn c-btn-square c-btn-border-1x c-btn-white c-btn-bold c-btn-uppercase">explore</a>
                                            @if (location.LocationId == 22)
                                            {
                                                <a href="@Model.Locations.First().ImageBase64" class="cbp-lightbox cbp-l-caption-buttonRight btn c-btn-square c-btn-border-1x c-btn-white c-btn-bold c-btn-uppercase" data-title='@location.AreaName <br/> @location.LocationName'>zoom</a>
                                            }
                                            else
                                            {
                                                <a href="@location.ImageBase64" class="cbp-lightbox cbp-l-caption-buttonRight btn c-btn-square c-btn-border-1x c-btn-white c-btn-bold c-btn-uppercase" data-title='@location.AreaName <br/> @location.LocationName'>zoom</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
    <!-- END: CONTENT/PORTFOLIO/LATEST-WORKS-1 -->
    <!-- BEGIN: CONTENT/BARS/BAR-1 -->
    <div class="c-content-box c-size-md">
        <div class="container">
            <div class="c-content-bar-1 c-opt-1">
                <h3 class="c-font-uppercase c-font-bold">TourPakistan – Your Own Travel Assistant</h3>
                <p class="c-font-uppercase">
                    TourPakistan is an online platform that provides complete
                    information about places that you’ll love to pay visit to.
                </p>
                <button type="button" class="btn btn-md c-btn-square c-btn-border-2x c-btn-dark c-btn-uppercase c-btn-bold c-margin-r-40 hide">Learn More</button>
            </div>
        </div>
    </div>
