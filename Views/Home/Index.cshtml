    <!-- BEGIN: CONTENT/MISC/SUBSCRIBE-FORM-1 -->
    <div class="c-content-box c-size-sm c-bg-dark">
        <div class="container">
            <div class="c-content-subscribe-form-1">
                <div class="row">
                    <div class="col-sm-6">
                        <h3 class="c-title c-font-30 c-font-uppercase c-font-bold">Subscribe to our newsletter</h3>
                        <div class="c-body c-font-16 c-font-uppercase c-font-sbold">Sign up to our newsletter to remain acquainted to our latest offers and places</div>
                    </div>
                    <div class="col-sm-6">
                        <form action="#">
