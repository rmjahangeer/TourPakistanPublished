                    </div>
                </div>
                <div class="col-md-4 wow animate fadeInRight">
                    <div class="c-content-testimonial-2-slider" data-slider="owl" data-single-item="true" data-auto-play="6000">
                        <div class="c-title c-font-uppercase c-theme-bg">Upcoming Events</div>
                        <div class="owl-carousel owl-theme c-theme owl-single">
                            @foreach (var events in Model.Events)
                            {
                                <div class="item">
                                    <div class="c-content-testimonial-2" style="min-height: 360px;">
                                        <div class="c-testimonial c-font-bold c-font-uppercase"><a href="#">@events.Title</a></div>
                                        <div class="c-testimonial">Event Date: <br />@events.ScheduledDate.Value.ToString("dd-MMM-yyyy")</div>
                                        <div class="c-author">
